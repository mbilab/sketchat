doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sketchat
    link(rel='stylesheet' href='app.css')
  body
    #room
      canvas#drawpad
      #remotes
      #sidebar.ui.segment
        #container
          .ui.top.attached.tabular.menu
            .item.active(data-tab='drawing')
              i.icon.paint.brush
            .item(data-tab='messages')
              i.icon.comments
            .item(data-tab='users')
              i.icon.users
          #draw.ui.bottom.attached.tab.segment.active(data-tab='drawing')
            .ui.teal.icon.button#reset
              i.icon.refresh
            .ui.red.icon.button#undo
              i.icon.undo
            .ui.divider
            input#color-picker
            span#color-string  &nbsp&nbsp;&nbsp;#000000
            .ui.divider
            p Stroke width:
              span#stroke-width-pixal  2px
            input#stroke-width-bar(type='range' min='1' max='20' value='2')
          #msg.ui.bottom.attached.tab.segment(data-tab='messages')
            #msg-list
            .ui.fluid.input#msg-input
              input(placeholder='messages...')
          #user.ui.bottom.attached.tab.segment(data-tab='users')
            #user-list
              user-list
        #local-video-block
          video#local-video
    .ui.modal.small#enter-name
      .header Give your name
      .content
        .ui.form
          .field#your-name
            input(type='text' placeholder='Your name')
          .ui.error.message
            p This name has been used, please input another name.
      .actions
        .ui.button.red.deny Cancel
        .ui.button.green.approve Submit
    .ui.modal.small#msg-modal
      .header Message
      .content.my-centered
      .actions
        .ui.button.green.approve Ok
    .ui.page.dimmer#loading
      .ui.text.loader Loading

    script(src='app.js')
    script(src='room.js' type='text/paperscript' canvas='drawpad')
